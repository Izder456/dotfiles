##
# ENV VARS
##
LANG=
export LC_COLLATE="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_MESSAGES="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export VISUAL="emacsclient --create-frame --alternate-editor='emacs'"
export EDITOR="emacsclient -nw --create-frame --alternate-editor='emacs -nw'"

##
# Setup Completions
##
autoload _fzf_key_bindings _fzf_completion
_fzf_key_bindings
_fzf_completion

##
# Java Stuff
##
export PATH=$PATH:/usr/local/jdk-17/bin
export JAVA_HOME=/usr/local/jdk-17/

##
# Alias for muscle memory
##
alias sudo="doas"

##
# Alias for listing files
##
alias ls="eza --icons --git -h"
alias la="eza --icons --git -ah"
alias ll="eza --icons --git -lh"
alias lh="eza --icons --git -lah"

##
# Alias for parsing
##
alias cat="bat --theme=gruvbox-dark -pp"
alias bat="bat --theme=gruvbox-dark"
alias grep="ggrep --color=auto"
alias rgrep="rg"

##
# Alias for editing
##
alias edit=$EDITOR
alias vedit=$VISUAL

##
# Alias for sysfetch
##
alias f="neofetch --off"
alias F="neofetch -L"
alias mf="pfetch"
alias uf="ufetch"

##
# Alias for sysstats
##
alias i="top"
alias H="htop"


##
# Alias for tarballz
##
alias btar="tar"
alias tar="gtar"

##
# Alias for yt-dlp
##
alias audio-dlp="yt-dlp -x --audio-quality 0 --audio-format vorbis \
		--concurrent-fragments 5"
alias video-dlp="yt-dlp --write-subs --sub-format srt --remux-video mkv \
		--embed-subs --concurrent-fragments 5"

##
# EXPORT PATH & MAN
##
export PATH=$HOME/.cargo/bin:$HOME/.local/bin:$HOME/.emacs.d/bin:$HOME/.local/share/pkg/bin:$PATH
export MANPATH=$HOME/.local/share/pkg/man:$MANPATH

##
# the r/unixporn rite of passage
##
afetch
